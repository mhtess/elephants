var makeComponent = function(params){
  return Categorical({
  vs: bins,
  ps: map(function(b) {
    probability(Beta(params), b) + Number.EPSILON
  }, bins )
})
}

var ThetaPrior = Infer({model: function(){
  var sampleTheta = function(){ uniformDraw(theta_bins) }
  var asia = sampleTheta();
  var africa = sampleTheta();
  return { asia, africa }
}});

